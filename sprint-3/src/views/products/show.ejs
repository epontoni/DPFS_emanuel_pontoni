<%- include('../partials/header', { title: product.title }) %>

<main class="page product-page">
  <div class="breadcrumb">
    <a href="/">Home</a> / <span><%= product.category || 'Product' %></span>
  </div>

  <section class="product-detail">
    <div class="product-visual">
      <% if (product.image) { %>
      <img
        src="<%= product.image %>"
        alt="<%= product.title %>"
        style="
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 12px;
        "
      />
      <% } %>
    </div>

    <div class="product-info">
      <p class="category"><%= product.category || 'General' %></p>
      <h1><%= product.title %></h1>
      <p class="price">$<%= product.price %></p>
      <p class="description"><%= product.description %></p>
      <div class="buttons">
        <button class="primary">Add to Cart</button>
        <button class="secondary">Add to Wish List</button>
      </div>

      <div class="details">
        <h3>Details</h3>
        <ul>
          <li>Durable materials</li>
          <li>Modern design</li>
          <li>Ships worldwide</li>
        </ul>
      </div>
    </div>
  </section>

  <section class="related">
    <div class="section-header">
      <h2>Related Products</h2>
      <a href="#" class="link">View all</a>
    </div>
    <div class="related-grid">
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
