<%- include('../partials/header', { title: 'Products' }) %>

<main class="container main-content">
  <h1 class="page-title">Products</h1>

  <div style="margin: 1rem 0">
    <a href="/products/create" class="btn btn-primary">Create Product</a>
  </div>

  <div class="grid-cards">
    <% products.forEach(function(p){ %>
    <div class="product-card">
      <img
        class="product-thumb"
        src="<%= p.image || 'https://via.placeholder.com/480x280?text=' + encodeURIComponent(p.title) %>"
        alt="<%= p.title %>"
      />
      <div class="card-body">
        <h3><a href="/products/<%= p.id %>"><%= p.title %></a></h3>
        <p class="muted"><%= p.description %></p>
        <p style="font-size: 12px; color: #6b7280">
          <strong><%= p.category %></strong>
        </p>
        <div
          style="
            margin-top: 0.75rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
          "
        >
          <strong class="price">$<%= p.price %></strong>
          <div>
            <a class="link" href="/products/<%= p.id %>">View</a>
            <a
              class="link"
              href="/products/<%= p.id %>/edit"
              style="margin-left: 12px"
              >Edit</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>
