<%- include('../partials/header', { title: product.title }) %>

<main class="page product-page">
  <div class="breadcrumb">
    <a href="/">Home</a> / <span><%= product.category || 'Product' %></span>
  </div>

  <section class="product-detail">
    <div class="product-visual">
      <% if (product.image) { %>
      <img
        src="<%= product.image %>"
        alt="<%= product.title %>"
        style="
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 12px;
        "
      />
      <% } %>
    </div>

    <div class="product-info">
      <p class="category"><%= product.category || 'General' %></p>
      <h1><%= product.title %></h1>
      <p class="price">$<%= product.price %></p>
      <p class="description"><%= product.description %></p>
      <% if (product.colors) { %>
      <p style="font-size: 14px; color: #6b7280; margin-top: 8px">
        <strong>Colores disponibles:</strong> <%= product.colors %>
      </p>
      <% } %>
      <div class="buttons">
        <a href="/products/<%= product.id %>/edit" class="primary">Edit</a>
        <button class="secondary">Add to Cart</button>
      </div>

      <div class="details">
        <h3>Detalles</h3>
        <ul>
          <li>ID: <%= product.id %></li>
          <li>Categor√≠a: <%= product.category %></li>
          <li>Precio: $<%= product.price %></li>
        </ul>
      </div>
    </div>
  </section>

  <section class="related">
    <div class="section-header">
      <h2>Related Products</h2>
      <a href="#" class="link">View all</a>
    </div>
    <div class="related-grid">
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
      <div class="related-card">
        <div class="related-thumb"></div>
        <p class="title">Product</p>
        <p class="price">$99.99</p>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
